<p id="notice"><%= notice %></p>

<h1>Cards</h1>

<table>
	<thead>
		<tr>
			<th>Id</th>
			<th>Code</th>
			<th>User</th>
			<th>Balance</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @cards.each do |card| %>
			<tr>
				<td><%= card.id %></td>
				<td><%= card.code %></td>
				<td><%= card.user_id %></td>
				<td><%= card.balance %></td>
				<td><%= link_to 'Show', card %></td>
				<td><%= link_to 'Edit', edit_card_path(card) %></td>
				<td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<br>

<%= link_to 'New Card', new_card_path %>
